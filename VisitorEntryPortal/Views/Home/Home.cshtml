@model VisitorEntryPortal.Models.company

@{
    ViewBag.Title = "Home Page";
}

<meta http-equiv="X-UA-Compatible" content="IE=9" />
<h1>Logo</h1>
<h3 style="text-align:center">Welcome to @ViewBag.CompanyName</h3>
<div class="row">
    <div class="col-md-12 container">

                <ul class="nav nav-tabs nav-justified" role="tablist">
                    <li role="presentation" class="active"><a data-toggle="tab" href="#home">Late Logout Register</a></li>
                    <li role="presentation"><a data-toggle="tab" href="#menu1">Temporary Id</a></li>
                    <li role="presentation"><a data-toggle="tab" href="#menu2">Weekend Register</a></li>
                    <li role="presentation"><a data-toggle="tab" href="#menu3">Interview Candidate</a></li>
                    <li role="presentation"><a data-toggle="tab" href="#menu4">Vendor</a></li>
                    <li role="presentation"><a data-toggle="tab" href="#menu5">Visitor</a></li>
                </ul>

                <div class="panel-body">
                    <div class="tab-content">
                        <div id="home" class="tab-pane fade in active">
                            @{Html.RenderPartial("_LateLogout");}
                        </div>
                        <div id="menu1" class="tab-pane fade">
                            @{Html.RenderPartial("_TemporaryID");}
                        </div>
                        <div id="menu2" class="tab-pane fade">
                            @{Html.RenderPartial("_WeekendRegister");}
                        </div>
                        <div id="menu3" class="tab-pane fade">
                            @{Html.RenderPartial("_InterviewCandidate");}
                        </div>
                        <div id="menu4" class="tab-pane fade">
                            @{Html.RenderPartial("_Vendor");}
                        </div>
                        <div id="menu5" class="tab-pane fade">
                            @{Html.RenderPartial("_Visitor");}
                        </div>
                    </div>
                </div>

</div>
</div>
<style>
    .nav {
        background-color: moccasin;
    }

    .active > a {
        background-color: burlywood !important;
        border-radius: 1pc !important;
    }

    a {
        color: black;
    }
</style>